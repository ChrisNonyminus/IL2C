<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Core'">
    <_IL2C_RuntimeName>dotnet </_IL2C_RuntimeName>
    <_IL2C_ExecutableName>il2c.dll</_IL2C_ExecutableName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Full'">
    <_IL2C_RuntimeName></_IL2C_RuntimeName>
    <_IL2C_ExecutableName>il2c.exe</_IL2C_ExecutableName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Mono'">
    <_IL2C_RuntimeName>mono </_IL2C_RuntimeName>
    <_IL2C_ExecutableName>il2c.exe</_IL2C_ExecutableName>
  </PropertyGroup>

  <PropertyGroup>
    <_IL2C_ScriptBaseDir>$(MSBuildThisFileDirectory)</_IL2C_ScriptBaseDir>
    <_IL2C_NativeCompilerDefaultFlags>-pipe -g2 -Wall -Werror -Wstrict-prototypes -Wno-unused</_IL2C_NativeCompilerDefaultFlags>
    <_IL2C_NativeCompilerDebugFlags>-O0 -D_DEBUG</_IL2C_NativeCompilerDebugFlags>
    <_IL2C_NativeCompilerReleaseFlags>-Ofast -fomit-frame-pointer -march=native -mtune=native -DNDEBUG</_IL2C_NativeCompilerReleaseFlags>
    <IL2CConfiguration>$(Configuration)</IL2CConfiguration>
  </PropertyGroup>

</Project>
