<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>

    <!-- Stripping any debug information on release build. -->
    <IL2CNativeLinkingFlags Condition="'$(IL2CConfiguration)' == 'Release'">-s</IL2CNativeLinkingFlags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Building native binary on-the-fly -->
    <PackageReference Include="IL2C.Build" Version="*" PrivateAssets="All" />
      
    <!-- Enable gcc toolchain on Windows building. (Ignores on other platform) -->
    <PackageReference Include="IL2C.Toolchain.gcc4.mingw32" Version="*" PrivateAssets="All" />

    <!-- Refers IL2C/Invoke attribute types. -->
    <PackageReference Include="IL2C.Interop" Version="*" />
  </ItemGroup>

</Project>
